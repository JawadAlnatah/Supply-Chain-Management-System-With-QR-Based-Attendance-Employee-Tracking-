            <Button fx:id="suppliersButton" text="ðŸ­ Suppliers" 
                    styleClass="menu-button" onAction="#handleSuppliers" 
                    maxWidth="Infinity">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            
            <Button fx:id="employeesButton" text="ðŸ‘¥ Employees" 
                    styleClass="menu-button" onAction="#handleEmployees" 
                    maxWidth="Infinity">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            
            <Button fx:id="attendanceButton" text="â° Attendance" 
                    styleClass="menu-button" onAction="#handleAttendance" 
                    maxWidth="Infinity">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            
            <Button fx:id="purchaseOrdersButton" text="ðŸ“‹ Purchase Orders" 
                    styleClass="menu-button" onAction="#handlePurchaseOrders" 
                    maxWidth="Infinity">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            
            <Separator/>
            
            <Button fx:id="reportsButton" text="ðŸ“Š Reports" 
                    styleClass="menu-button" onAction="#handleReports" 
                    maxWidth="Infinity">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            
            <Button fx:id="settingsButton" text="âš™ï¸ Settings" 
                    styleClass="menu-button" onAction="#handleSettings" 
                    maxWidth="Infinity">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Label fx:id="userInfoLabel" text="user@email.com" 
                   styleClass="user-info" wrapText="true">
                <font>
                    <Font size="10.0" />
                </font>
            </Label>
        </VBox>
    </left>
    
    <!-- Center Content Area -->
    <center>
        <StackPane styleClass="content-area">
            <VBox alignment="CENTER" spacing="20">
                <Label text="Welcome to Supply Chain Management System" styleClass="welcome-message">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                
                <Label text="Select a module from the menu to get started" styleClass="subtitle">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                
                <!-- Dashboard Statistics (Optional) -->
                <GridPane hgap="20" vgap="20" alignment="CENTER">
                    <padding>
                        <Insets top="40"/>
                    </padding>
                    
                    <VBox styleClass="stat-card" alignment="CENTER" spacing="10" 
