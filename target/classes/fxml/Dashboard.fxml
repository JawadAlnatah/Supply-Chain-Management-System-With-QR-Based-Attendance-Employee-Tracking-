<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.team.supplychain.controllers.DashboardController"
            fx:id="mainContainer"
            prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../css/styles.css">
    
    <!-- Top Bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <Label text="Supply Chain Management System" styleClass="app-title">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="welcomeLabel" text="Welcome, User!" styleClass="welcome-text">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="roleLabel" text="Role: Employee" styleClass="role-text">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
            </VBox>
            
            <Button fx:id="logoutButton" text="Logout" styleClass="logout-button" 
                    onAction="#handleLogout">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>
        </HBox>
    </top>
    
    <!-- Left Sidebar Menu -->
    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="250">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            
            <Label text="MAIN MENU" styleClass="menu-header">
                <font>
                    <Font name="System Bold" size="12.0" />
